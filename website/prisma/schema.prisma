// ============================================
// Prisma Schema - Job Recruitment System
// ============================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./Database.db"
}

// ============================================
// User Management (ระบบผู้ใช้งาน)
// ============================================

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   // Hashed password
  role      String   @default("USER") // ADMIN, HR, USER
  
  // Personal Information
  fullName  String?  // ชื่อ-นามสกุลจริง
  email     String?  // อีเมลติดต่อ
  phone     String?  // เบอร์โทร
  position  String?  // ตำแหน่งงานปัจจุบัน
  bio       String?  // แนะนำตัว
  
  // Timestamps
  createdAt DateTime @default(now())
  
  // Relations
  jobs      Job[]    // งานที่สร้าง

  @@map("User")
}

// ============================================
// Job Posting (ระบบประกาศงาน)
// ============================================

model Job {
  id               String   @id @default(cuid())
  title            String
  description      String?
  department       String?
  location         String?
  salary           String?
  employmentType   String   @default("FULL_TIME")
  requirements     String?
  responsibilities String?
  benefits         String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  postedByUser User @relation(fields: [postedBy], references: [id], onDelete: Cascade)
  postedBy     Int

  @@map("Job")
}
